<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibm.japan.kanjidoriru.Ranking"
    android:background="@drawable/ranking">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.876">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ccffcc"
            android:orientation="horizontal"
            android:text="TextView"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1st"
                android:textColor="#009900"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/firstUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#009900" />

            <TextView
                android:id="@+id/firstScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#009900" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:text="TextView"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2nd"
                android:textColor="#009900"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/secondUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#009900" />

            <TextView
                android:id="@+id/secondScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#009900" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ccffcc"
            android:orientation="horizontal"
            android:text="TextView"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3rd"
                android:textColor="#009900"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/thirdUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#009900" />

            <TextView
                android:id="@+id/thirdScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#009900" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:text="TextView"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4th"
                android:textColor="#009900"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/forthUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#009900" />

            <TextView
                android:id="@+id/forthScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#009900" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ccffcc"
            android:orientation="horizontal"
            android:text="TextView"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5th"
                android:textColor="#009900"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fifthUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#009900" />

            <TextView
                android:id="@+id/fifthScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#009900" />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>